model Product {
  id          String      @id @default(uuid())
  name        String
  description String?
  category    CategoryType?
  price       Float
  stock       Int
  images      String[]     // Array of image URLs
  reviews     Review[]   @relation("ProductReviews")
  cartItems   CartItem[]
  orderItems  OrderItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
